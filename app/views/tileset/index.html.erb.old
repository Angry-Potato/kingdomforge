<%= javascript_include_tag "ajaxHandlers" %>
<div class="page-title"><h1>Tileset Manager<h1></div>
<div id="tileset-main">
<h2>Tile Chooser</h2>
<% @terrain_items.each do |superset| %>
  <h3>Tile Superset: <%= superset[:name] %></h3>
    <table id="<%= superset[:id]%>">
    <thead>
    <p>ID: <%= superset[:id] %> Colour: <%= superset[:colour] %></p>
    <p><%= link_to "[+]", {:action => "expand_tiles",	:id => "#{superset[:id]}"},
		:remote => "true",
		:class => "expand_tiles",
		:id => "expand_tiles-#{superset[:id]}",
		:onclick => "$(this).hide();$(this).next().show(); $('#data-#{superset[:id]}').show()" %> 
    <a onclick="$('#data-<%=superset[:id]%>').hide(); $(this).prev().show(); $(this).hide();" style="display:none;">[-]</a></p>
    </thead>
    <tr class="superset-data" id="data-<%= superset[:id]%>">
    </tr>
    </table>
<% end %>
</div>
<div id="tileset-options">
<h2>Tileset Options Panel</h2>
<div id="tileset-options-content">
<table>
<thead><h3>Select a pattern:</h3></thead>
<tbody>
<% (0..4).each do |i| %>
<tr>
<% (0..4).each do |j| %>
<td><%= link_to "Test", {:action  => "patterns_for_item", :id => ((4*i)+j)},
		:remote => "true",
		:id => ((4*i)+j)%>
</td>
<% end %>
</tr>
<% end %>
</tbody>
</table>
</div>
</div>
