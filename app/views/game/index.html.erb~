akihabara_dir = "javascripts/";
</script>
<%= javascript_include_tag "akihabara/gbox", "akihabara/iphopad", "akihabara/trigo", "akihabara/toys", "akihabara/help", "akihabara/tool", "akihabara/gamecycle" %>
